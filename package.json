{
  "name": "blind-auction-drafting",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. .",
    "watch": "npm-watch",
    "clean": "rimraf build",
    "cleanbuild": "rimraf build && svelte-kit build",
    "test:functions": "mocha --exit --require 'test/functionsHooks.js'"
  },
  "watch": {
    "cleanbuild": {
      "patterns": [
        "src"
      ],
      "extensions": "js,svelte"
    }
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.13",
    "@sveltejs/kit": "next",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "firebase-admin": "^9.11.0",
    "firebase-functions-test": "^0.3.0",
    "fs-extra": "^10.0.0",
    "mocha": "^9.0.2",
    "npm-watch": "^0.10.0",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rimraf": "^3.0.2",
    "svelte": "^3.34.0"
  },
  "type": "module",
  "dependencies": {
    "firebase": "^9.0.0-beta.6"
  }
}
