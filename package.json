{
  "name": "blind-auction-drafting",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write --plugin-search-dir=. .",
    "watch": "npm-watch",
    "clean": "rimraf build",
    "cleanbuild": "rimraf build && svelte-kit build",
    "test:rules": "mocha --exit 'test/database-rules/'",
    "test:functions": "mocha --exit --require 'test/functionsHooks.js'"
  },
  "watch": {
    "cleanbuild": {
      "patterns": [
        "src"
      ],
      "extensions": "js,svelte"
    }
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.7",
    "svelte-adapter-firebase": "0.14.2",
    "@sveltejs/kit": "1.0.0-next.405",
    "firebase-admin": "^11.5.0",
    "firebase-functions-test": "^3.0.0",
    "fs-extra": "^10.0.0",
    "mocha": "^9.0.2",
    "npm-watch": "^0.10.0",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rimraf": "^3.0.2",
    "svelte": "^3.34.0",
    "vite": "^3.0.0"
  },
  "type": "module",
  "dependencies": {
    "firebase": "^9.0.0-beta.6"
  }
}
