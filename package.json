{
  "name": "blind-auction-draft",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write --plugin-search-dir=. .",
    "watch": "npm-watch",
    "clean": "rimraf build",
    "cleanbuild": "rimraf build && vite build",
    "test:rules": "mocha --exit 'test/database-rules/'",
    "test:functions": "mocha --exit 'test/functions/' --require 'test/functions/mochaHooks.js'"
  },
  "watch": {
    "cleanbuild": {
      "patterns": [
        "src"
      ],
      "extensions": "js,svelte"
    }
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.7",
    "@sveltejs/kit": "1.0.0-next.405",
    "firebase-admin": "^11.5.0",
    "firebase-functions-test": "^3.0.0",
    "fs-extra": "^10.0.0",
    "mocha": "^10.2.0",
    "npm-watch": "^0.10.0",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rimraf": "^3.0.2",
    "svelte": "^3.34.0",
    "svelte-adapter-firebase": "0.14.2",
    "vite": "^3.0.0"
  },
  "type": "module",
  "dependencies": {
    "firebase": "9.17.1"
  }
}
